<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>edit test</title>
</head>

<body>
	<h1>Edit Test</h1>

	<h2>Answer These <%= test.length %> test</h2>

	<div class="question-container">
		<% for ( let question of test) { %>
		<div class="question-card">

			<form action="">
				<h3><%= question.questions %></h3>

				<% question.answers.forEach(elm => { %>
				<input type="radio" name="<%= question.question %>" id="<%= elm %>" value="<%= elm %>">
				<label for="<%= elm %>"><%= elm %></label>
				<% }) %>
		</div>
		<% } %>
		<button>submit</button>
		</form>
	</div>

</body>

</html>