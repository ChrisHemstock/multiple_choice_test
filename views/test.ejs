<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= testName %></title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
    crossorigin="anonymous" />

</head>

<body class="container bg-dark my-5">
  <div class="d-flex justify-content-between mb-4">
    <h1 class="text-light my-auto"><%= testName %></h1>
    <nav class="btn-group btn-group-sm my-auto" role="group" aria-label="nav group">
      <a class="btn btn-primary" href="/">Home</a>
      <a class="btn btn-secondary" href="/edit_test/<%= testName %>">Edit</a>
    </nav>
  </div>

  <div>
    <form action="">
    <% example[testName].questions.forEach((questionElm, questionIdx) => { %>
    <div class="card mb-5">
      <div class="card-body">
        <h5 class="card-title"><%= questionElm.question %></h5>
        <div>
            <% example[testName].questions[questionIdx].answers.forEach((answerElm) => { %>
            <div>
              <input type="radio" id="<%= answerElm %>" name="<%= questionElm.question %>">
              <label for="<%= answerElm %>"><%= answerElm %></label>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
      <% }) %>
      <button class="btn btn-sm btn-primary" type="submit">Submit</button>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous">
  </script>
</body>

</html>